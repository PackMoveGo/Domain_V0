# Environment Configuration Example
# Copy this file to .env.development.local or .env.production.local
# DO NOT commit .env*.local files to Git

NODE_ENV=development
DEV_HTTPS=true
HOST=https://localhost:
PORT=5001
SKIP_BACKEND_CHECK=false
API_URL=https://localhost:3000

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=3h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://localhost:5001,https://yourdomain.com
CORS_CREDENTIALS=true

# Logging
REDUCE_LOGGING=false
ENABLE_DEV_TOOLS=true

# API Configuration
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# API Key (CHANGE THIS IN PRODUCTION!)
API_KEY_FRONTEND=your-api-key-here

# Sign In Host
SIGNIN_HOST=https://localhost:5002/signin

